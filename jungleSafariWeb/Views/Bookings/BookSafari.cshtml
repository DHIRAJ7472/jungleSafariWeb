@model IEnumerable<jungleSafariWeb.ViewModel.SafariDetailView>

@{
    ViewBag.Title = "BookSafari";
}

<h2 style="margin-top:150px" class="container body-content text-center font-weight-bold bg-light">Book Safari</h2>

<div class="container body-content bg-light">
    

    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SafariName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SafariDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SafariTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SafariCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SafariName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SafariDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SafariTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SafariCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.ActionLink("Book", "Book", new { ParkId = item.ParkId, SafariId = item.SafariId })
                </td>
            </tr>
        }

    </table>
</div>